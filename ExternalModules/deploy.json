{
    "SRC": "/app001/www/redcap/external_modules",
    "DEST_DIR": "/app001/www/redcap/",
    "RFLAGS": "--exclude 'deploy.json' --delete -avzcO -e ssh",
    "EXCLUDES": [
        ".idea",
        ".git*",
        "node_modules"
    ],
    "DEFAULTS": {
        "run_tests": true,
        "run_predeploy": true,
        "run_postdeploy": true,
        "deploy_staging": false,
        "deploy_production": true,
        "create_tag": true
    },
    "SCRIPTS": [
        {
            "type": "test",
            "environments": ["local"],
            "dir": "{{SRC}}",
            "cmds": [
                "./predeploy.sh",
                "./run-tests.sh"
            ],
            "confirm": true
        },
        {
            "type": "post_deploy",
            "environments": ["local"],
            "dir": "{{SRC}}",
            "cmds": [
                "git checkout testing"
            ]
        }
    ]
}
